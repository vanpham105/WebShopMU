<div class="mt-5">
    <h3>Thêm sản phẩm</h3>
    <form method="POST" action="/products/store">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="txtName" class="form-control" id="name" name="name" >
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea type="txtdescription" class="form-control" id="description" name="description" ></textarea>
        </div>
        
        <div class="form-group">
            <label for="image">Hình ảnh</label>
            <input type="text" class="form-control" class="form-control" id="image" name="image">
        </div>

        <div class="form-group">
            <label for="price">Giá</label>
            <input type="text" class="form-control" class="form-control" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="slug">Mã sản phẩm</label>
            <input type="text" class="form-control" class="form-control" id="slug" name="slug">
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>