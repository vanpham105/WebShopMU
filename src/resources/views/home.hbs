<div class ="mt-4">
    <div class ="row">
        {{#each products}}
        <div class="col-sm-5 col-lg-4">
            <div class="card sanpham" >
                <a href="/products/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.image}}">
                </a>
                <div class="card-body">
                    <a href="/product/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5>
                    </a>
                    
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-price">{{this.price}}</p>
                    <a href="/products/{{this.slug}}" class="btn-home btn">Mua h√†ng</a>
                </div>
            </div>
        </div>
        {{/each}}
         
    </div>
</div>